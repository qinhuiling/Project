<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.asus.exercise.MainActivity">

    <Button
        android:id="@+id/set_color_btn"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="改变颜色"
        />

    <Button
        android:id="@+id/add"
        android:onClick="add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="加速"
        android:layout_below="@+id/set_color_btn"
        />

    <Button
        android:id="@+id/slow"
        android:onClick="slow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="减速"
        android:layout_below="@+id/add"
        />

    <!--<Button-->
        <!--android:id="@+id/pause_or_start"-->
        <!--android:onClick="pauseOrStart"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="暂停/开始"-->
        <!--android:layout_below="@+id/slow"-->
        <!--/>-->

    <com.bwie.asus.exercise.view.MyCustomCircleArrowView
        android:id="@+id/my_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:circlr_bound_width="3dp"
        app:circlr_bound_color="#000"
        />

</RelativeLayout>
